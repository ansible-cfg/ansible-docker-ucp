[app_lb]
dp-app-lb ip_addr='10.10.174.74/22' esxi_host='dh02.am2.cloudra.local'

[lbs]
dp-ucp-lb ip_addr='10.10.174.72/22' esxi_host='dh02.am2.cloudra.local'
dp-dtr-lb ip_addr='10.10.174.73/22' esxi_host='dh01.am2.cloudra.local'
dp-app-lb ip_addr='10.10.174.74/22' esxi_host='dh02.am2.cloudra.local'

[lbs:vars]
cpus='2'
ram='4096'
disk2_size='0'

[docker:children]
ucp
dtr
worker

[nfs]
dp-nfs ip_addr='10.10.174.75/22' esxi_host='dh02.am2.cloudra.local'

[nfs:vars]
