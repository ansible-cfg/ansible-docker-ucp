## UCP
[ucp_main]
dp-ucp01 ip_addr='10.10.174.63/22' esxi_host='dh01.am2.cloudra.local'

[ucp]
dp-ucp01 ip_addr='10.10.174.63/22' esxi_host='dh01.am2.cloudra.local'
dp-ucp02 ip_addr='10.10.174.64/22' esxi_host='dh02.am2.cloudra.local'
dp-ucp03 ip_addr='10.10.174.65/22' esxi_host='dh01.am2.cloudra.local'

[ucp:vars]
cpus='4'
ram='8192'
disk2_size='200'


